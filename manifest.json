{
  "manifest_version": 3,
  "name": "Malware Checker",
  "version": "1.0",
  "description": "Checks websites for malware or phishing threats.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
